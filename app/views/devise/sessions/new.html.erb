 <div class="banner text-center banner-new-trip" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1008&q=80 );">
  <div>
    <div class="container">
      <h2 class="text-color">Log in</h2>
      <p class="text-color">Welcome back</p>
    </div>
  </div>
</div>

<div class="container container-new-trip">
  <div class="row justify-content-center row-new-trip">
    <div class="col-6">
      <div class="form-wrapper" id="booking-form-div">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button-orange button-new-trip" %>
          </div>
        <% end %>
      </div>
        <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
